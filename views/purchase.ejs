<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Warehouse</title>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/script.js"></script>
</head>
<body>

    <h1>Daftar Purchase</h1>
    <form action="/add_purchase" method="POST">
        <input type="text" name="code_transaction" placeholder="Code product" required>
        <input type="text" name="quantity" placeholder="Quantity" required>
        <button type="submit">Tambah</button>
    </form>

    <% purchase.forEach(p => { %>
    <li>
        <%= p.code_transaction %> - <%= p.quantity %>
        <a href="/edit_purchase/<%= p.id %>">Edit</a>
        <form action="/delete_purchase/<%= p.id %>" method="POST" style="display:inline;">
            <button type="submit">Hapus</button>
        </form>
    </li>
<% }) %>

</body>
</html>
